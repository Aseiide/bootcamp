= content_tag_for :tr, practice do |practice|
  td.title
    = link_to practice.title, practice
  - if current_user
    td.status
      - status = practice.status(current_user)
      = render 'status', practice: practice
    td.handle
      .btn-group
        = link_to practice_position_path(practice, move: :top), method: :put, class: 'btn'
          i.icon-double-angle-up
        = link_to practice_position_path(practice, move: :higher), method: :put, class: 'btn'
          i.icon-angle-up
        = link_to practice_position_path(practice, move: :lower), method: :put, class: 'btn'
          i.icon-angle-down
        = link_to practice_position_path(practice, move: :bottom), method: :put, class: 'btn'
          i.icon-double-angle-down
