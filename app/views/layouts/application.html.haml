!!!
%html
  %head
    %title= t('256interns')
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{class: "#{controller_name}_#{action_name}"}
    %aside
      %nav#menu
        %ul
          - if current_user
            %li.user_icon= image_tag current_user
            %li= link_to t('users'), users_path
            %li= link_to t('practices'), practices_path
            %li= link_to t('logout'), logout_path
          - else
            %li= link_to t('sign_up'), new_user_path
            %li= link_to t('login'), login_path
      %nav#time
    %p#notice= notice
    %p#alert= alert
    #content
      = yield
