!!!
%html
  %head
    %title= t('256interns')
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body{class: "#{controller_name}_#{action_name}"}
    %aside
      %nav#menu
        %ul
          - if current_user
            %li.user_icon= image_tag current_user.icon_url
            %li= link_to t('users'), users_path
            %li= link_to t('practices'), practices_path
            %li= link_to t('logout'), logout_path
          - else
            %li= link_to t('login'), auth_at_provider_path(provider: :github)
          %li= link_to t('start'), root_path
      %nav#time
    #content
      = yield
